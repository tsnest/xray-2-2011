<Canvas x:Class="xray.editor.wpf_controls.curve_editor.visual_curve_key"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:curve_editor="clr-namespace:xray.editor.wpf_controls.curve_editor"
		Name="dot" 
		Height="{x:Static curve_editor:visual_curve_key.key_width}"
		Width="{x:Static curve_editor:visual_curve_key.key_height}"
		ClipToBounds="false">
	<Grid Canvas.Left="0" Canvas.Top="0" Width="11" Height="11" ZIndex="200"
		  MouseEnter="mouse_enter"
		  MouseLeave="mouse_leave">
		<Rectangle Name="selection_ellipse"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="Yellow" StrokeThickness="2" Visibility="Hidden"  IsHitTestVisible="False" IsEnabled="False"/>
		<Rectangle Name="dot_ellipse" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="Red" Width="7" Height="7"/>
	</Grid>
</Canvas>
