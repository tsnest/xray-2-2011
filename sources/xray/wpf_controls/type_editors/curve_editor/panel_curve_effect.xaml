<UserControl
	x:Class="xray.editor.wpf_controls.curve_editor.panel_curve_effect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	MouseDown="mouse_down">
	
    <DockPanel>
		<Button DockPanel.Dock="Right" Width="11" Height="11" Margin="2, 0, 2, 0" VerticalAlignment="Center" Click="remove_click" >
			<Path Stroke="Black" StrokeThickness="1" Data="M0 0 L5 5 M0 5 L5 0" />
		</Button>
		<TextBlock Name="m_text_block" x:FieldModifier="private" Padding="4, 0, 0, 0"  Text="{Binding header, ElementName=this}" />
	</DockPanel>
</UserControl>
