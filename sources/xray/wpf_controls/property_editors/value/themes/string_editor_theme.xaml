<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:value="clr-namespace:xray.editor.wpf_controls.property_editors.value">
    
	<Style TargetType="{x:Type value:string_editor}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type value:string_editor}">
					<TextBox Name="PART_text_box" Text="{Binding value}" BorderThickness="0" Background="Transparent" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>